<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxws="http://cxf.apache.org/jaxws"
    xmlns:cxf="http://cxf.apache.org/core"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
    http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">
    
    <!-- 内置拦截器 -->
 	<cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
        
        <!-- 接入拦截器 -->
        <cxf:inInterceptors>
        	<ref bean="concurrentInInterceptor"></ref>
        	<ref bean="statisticInInterceptor"></ref>
        	<ref bean="cap4jLoggingInInterceptor"></ref>
        </cxf:inInterceptors>
        
        <!-- 接出拦截器 -->
        <cxf:outInterceptors>
        	<ref bean="concurrentOutInterceptor"></ref>
        	<ref bean="statisticOutInterceptor"></ref>
        </cxf:outInterceptors>
    </cxf:bus> 
    
    <!-- 应用系统定义的webservice Bean -->
</beans>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jaxws="http://cxf.apache.org/jaxws"
    xmlns:cxf="http://cxf.apache.org/core"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
    http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml"/>
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml"/>
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>
    
	<bean id="wss4jInInterceptor" class="org.apache.cxf.ws.security.wss4j.WSS4JInInterceptor">
		<constructor-arg>
			<map>
				<entry key="action" value="UsernameToken" />
				<entry key="passwordType" value="PasswordText" />
				<entry key="passwordCallbackClass" value="com.cib.cap4j.core.webservice.DefaultServerPasswordCallback" />
			</map>
		</constructor-arg>
	</bean>
	
	<bean id="wss4jOutInterceptor" class="org.apache.cxf.ws.security.wss4j.WSS4JOutInterceptor">
		<constructor-arg>
			<map>
				<entry key="action" value="UsernameToken" />
				<entry key="passwordType" value="PasswordText" />
				<entry key="user" value="user" />
				<entry key="passwordCallbackClass" value="com.cib.cap4j.core.webservice.DefaultClientPasswordCallback" />
			</map>
		</constructor-arg>
	</bean>
    
    <!-- 输出error级别日志 -->
    <bean id="cap4jLoggingInInterceptor" class="com.cib.cap4j.core.webservice.interceptor.Cap4jWSLoggingInInterceptor"></bean>
    
    <!-- 最大并发连接数控制 -->
    <bean id="concurrentInInterceptor" class="com.cib.cap4j.core.webservice.interceptor.ConcurrentInInterceptor"></bean>
    <bean id="concurrentOutInterceptor" class="com.cib.cap4j.core.webservice.interceptor.ConcurrentOutInterceptor"></bean>  
    
    <!-- 监控配置-->
    <bean id="statisticInInterceptor" class="com.cib.cap4j.pec.monitor.webservice.WebserviceStatisticInInterceptor"></bean>
    <bean id="statisticOutInterceptor" class="com.cib.cap4j.pec.monitor.webservice.WebserviceStatisticOutInterceptor"></bean> 
     
    <bean id="wsMetadataService" class="com.cib.cap4j.cfn.webservice.WSMetadataServiceImpl">
    	<property name="wsConcurrentCodeType" value="wsConcurrent"/>
    	<property name="wsBaseConfigCodeType" value="wsBaseConfig"/>
    	<property name="openAccessCode" value="openAccess"/>
    	<property name="allowedMaxConnNumCode" value="allowedMaxConnNum"/>
    </bean>
    
    <bean id="wsUserService" class="com.cib.cap4j.cfn.webservice.WSUserServiceImpl">
    	<property name="wsUserCodeType" value="wsUser"/>
    </bean>
</beans>